{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "@emotion/react/types/css-prop",
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
